	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<meta name="generator" content={Astro.generator} />

	<!-- SEO Meta Tags -->
	<title>{appName} - Master Dutch Speaking for Inburgering Exam</title>
	<meta name="description" content={description} />
	<meta name="keywords" content="inburgering, Dutch speaking, Netherlands exam, Dutch practice, language learning, AI speech coach" />

	<!-- Open Graph / Facebook -->
	<meta property="og:type" content="website" />
	<meta property="og:url" content={siteUrl} />
	<meta property="og:title" content={`${appName} - Master Dutch Speaking for Inburgering Exam`} />
	<meta property="og:description" content={description} />
	<meta property="og:image" content={ogImage} />
	<meta property="og:image:width" content="1200" />
	<meta property="og:image:height" content="630" />
	<meta property="og:image:alt" content="SpeakFluent - Master Dutch Speaking for Your Inburgering Exam" />

	<!-- Twitter -->
	<meta property="twitter:card" content="summary_large_image" />
	<meta property="twitter:url" content={siteUrl} />
	<meta property="twitter:title" content={`${appName} - Master Dutch Speaking for Inburgering Exam`} />
	<meta property="twitter:description" content={description} />
	<meta property="twitter:image" content={ogImage} />
	<meta property="twitter:image:alt" content="SpeakFluent - Master Dutch Speaking for Your Inburgering Exam" />

	<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
