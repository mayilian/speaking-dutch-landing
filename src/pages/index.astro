---
import '../styles/global.css';

const appName = "SpeakFluent";
const description = "Master Dutch speaking for your inburgering exam with AI-powered practice. 26+ exercises, unlimited tests, and instant feedback. Free to start!";
const iosAppUrl = "https://apps.apple.com/us/app/speaking-dutch/id6499470406";
const androidAppUrl = "https://play.google.com/store/apps/details?id=com.dutchspeaking.exam";
const contactEmail = "langtoolsapp@gmail.com";
const siteUrl = "https://speakfluent.app";
const ogImage = `${siteUrl}/og-image.svg`;
